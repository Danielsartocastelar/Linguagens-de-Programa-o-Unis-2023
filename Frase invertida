def inverte_letras(frase):
    # Divide a frase em palavras
    palavras = frase.split()
    
    # Inicializa uma lista para armazenar as palavras invertidas
    palavras_invertidas = []

    # Inverte as letras de cada palavra e as adiciona à lista de palavras invertidas
    for palavra in palavras:
        palavra_invertida = palavra[::-1]
        palavras_invertidas.append(palavra_invertida)

    # Une as palavras invertidas para formar a nova frase
    nova_frase = ' '.join(palavras_invertidas)

    return nova_frase

# Exemplo de uso
frase_original = "Esta é uma frase de exemplo"
frase_invertida = inverte_letras(frase_original)
print(f"Frase original: {frase_original}")
print(f"Frase com letras invertidas: {frase_invertida}")
